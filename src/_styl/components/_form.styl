.input-table
    input
    textarea
        height 38px
        padding 3px 5px
        border 1px solid #000000;
        font-size 16px
        box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)
        border-radius 3px
        box-sizing border-box

        &.unit-invalid
        &.relation-invalid
            padding 1px 3px
            background #fdd
            border 3px solid #f00

    select
        box-sizing border-box
        font-size 16px

        &.unit-invalid
        &.relation-invalid
            background #fdd
            border 3px solid #f00

    input
        &[type=text]
            width 180px

        &[type=tel], &.numeric
            width 110px

        &.zip1
            width 100px

        &.short
            width 110px

        &.normal
            width 180px

        &.semi-long
            width 240px

        &.long
            width 300px

        &[type=submit]
            cursor pointer

    .input-row
        min-width 800px
        margin-bottom 10px

        &.required
            > dt
                &:before 
                    content "required"
                    font-size 12px
                    margin-right 10px

        > dt
            display inline-block
            width 230px
            margin-right 20px
            text-align right
            font-size 20px
        > dd
            display inline-block

        .card-image
            display inline-block
            vertical-align bottom
            margin-left 10px

    .input-logo
        width 925px

    .email-valid
        position relative

        &:after
            content "✔"
            position absolute
            top 15px
            right 10px
            color #33dd33

    .normal
        display block

    .uk
        display none

    @media screen and (max-width: 420px)
        input
            width 100%

            &[type=text], &[type=password]
                width 100%

            &[type=tel]
                width 65px

            &.numeric
                width 65px

            &.short
                width 65px 
            
            &.normal, &.semi-long, &.long
                width 100% 

        .input-row
            min-width inherit

            > dt
                display block
                width 100%
                margin 0
                text-align left
                font-size 20px
            > dd
                position relative
                display block

                .card-image
                    position absolute
                    display block
                    margin 10px
                    top 30px
                    right 0

        .input-logo
            width auto



        .credit-icon
            &.jcb
                background-size 28.5px 22px
                width 28.5px
                height 22px

            &.master
                background-size 35px 22px
                width 35px
                height 22px

            &.visa
                width 35px
                height 22px
                background-size 35px 22px

.error-messages
    display none
    margin-bottom 20px
    padding 8px
    background #fbffc2
    border 1px solid #888888
    border-radius 3px
    color #ff0000
    font-weight bold

.error-messages > li
    text-indent -1em
    margin-left 1em 
    margin-bottom 10px

.error-messages > li:last-child
    margin-bottom 0

.error-messages > li:before
    content "・"

.error-messages a
    color inherit
    text-decoration none

@media screen and (max-width: 420px)
    .error-messages.active
        display block

.operation
    text-align center
    margin 40px auto

.credit-icon
    display none
    vertical-align bottom

    &.active
        display inline-block

    &.jcb
        background-image url('data:image/png;base64,')
        width 57px
        height 44px

    &.master
        background-image url('data:image/png;base64,')
        width 70px
        height 44px

    &.visa
        background-image url('data:image/png;base64,')
        width 70px
        height 44px